@model LMS.UI.MVC.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit Users";
}

<div class="mainContent">
    <h2>@ViewBag.Title</h2>
    <div class="subContent">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Edit user role</h4>
                <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)

                <div class="form-group row">
                    @*@Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })*@
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control centerInput", placeholder="Email" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group row">
                    @*@Html.Label("Roles", new { @class = "control-label col-md-2" })*@
                    <span class="col-md-12">
                        @foreach (var item in Model.RolesList)
                {
                            <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                            @Html.Label(item.Value, new { @class = "control-label" })
                        }
                    </span>
                </div>

                <div class="btn-wrapper">
                    <div class="text-center">
                        <input type="submit" value="Save" class="btn btn-default" />
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn", id = "readMore" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
