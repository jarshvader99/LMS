@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Role Details";
}

<div class="mainContent">
    <div class="subContent">
        <h2>@ViewBag.Title</h2>

        <div>
                <p>
                    <strong>@Html.DisplayNameFor(model => model.Name)</strong>
                    @Html.DisplayFor(model => model.Name)
                </p>
        </div>
        <h4>List of users in this role</h4>
        @if (ViewBag.UserCount == 0)
        {
            <hr />
            <p>No users found in this role.</p>
        }

        <table class="table">

            @foreach (var item in ViewBag.Users)
            {
                <tr>
                    <td>
                        @item.UserName
                    </td>
                </tr>
            }
        </table>
        <div class="btn-wrapper">
            <div class="text-center">
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-default" }) 
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn", id="readMore" })
            </div>
        </div>
    </div>
    </div>



