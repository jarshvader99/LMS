@model LMS.DATA.EF.Cours

@{
    ViewBag.Title = "Delete Course";
}

<div class="mainContent">
    <div class="subContent">
        <h2>@ViewBag.Title</h2>

        <h3>Are you sure you want to <span class="text-danger">DELETE</span> this course?</h3>
        <div>

            <hr />
            <div>
                <p>
                    <strong>@Html.DisplayNameFor(model => model.CourseName): </strong>
         
                    @Html.DisplayFor(model => model.CourseName)
                </p>

                <p>
                    <strong>
                        @Html.DisplayNameFor(model => model.Description): 
                    </strong>               
                    @Html.DisplayFor(model => model.Description)
                </p>

                <p>
                    <strong>
                        @Html.DisplayNameFor(model => model.IsActive): 
                    </strong>             
                    @Html.DisplayFor(model => model.IsActive)
                </p>

            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="btn-wrapper">
                    <div class="text-center">
                        <input type="submit" value="Delete" class="btn btn-default" /> 
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn", id = "readMore" })
                    </div>
                </div>
            }
        </div>
    </div>
    </div>