@model LMS.UI.MVC.Models.RegisterViewModel
@{
    ViewBag.Title = "Registration";
}

<div class="mainContent">
    <h2>@ViewBag.Title</h2>
    
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="subContent">
            <h4>To register a new account, fill out the form below.</h4>
            <hr />
            <div class="wow fadeIn">
                <div class="form-group row">
                    @*@Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label text-right" })*@
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control centerInput", placeholder = "First Name" })
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @*@Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label text-right" })*@
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control centerInput", placeholder = "Last Name" })
                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @*@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label text-right" })*@
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control centerInput", placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @*@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label text-right" })*@
                    <div class="col-md-12">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control centerInput", placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @*@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label text-right" })*@
                    <div class="col-md-12">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control centerInput", placeholder = "Confirm Password" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row" id="btn-wrap">
                    <div class="col-md-12">
                        <input type="submit" class="btn btn-default" value="Register" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
